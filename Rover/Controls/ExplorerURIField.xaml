<UserControl x:Class="Rover.Controls.ExplorerURIField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Rover.Controls"
             mc:Ignorable="d"
             d:DataContext=""
             >
    <Border SnapsToDevicePixels="true" BorderBrush="#0078d7" BorderThickness="1" DockPanel.Dock="Top" Margin="24, 10, 10, 10">
        <StackPanel Orientation="Horizontal" x:Name="NavigationBar" Grid.Row="0" Grid.Column="0" Margin="5, 0, 0, 5" Grid.ColumnSpan="2" VerticalAlignment="Center">
            <!-- Navigation elements will be added here dynamically -->
            <local:ExplorerURIFieldElement/>
            <local:ExplorerURIFieldElement/>
            <local:ExplorerURIFieldElement/>
        </StackPanel>
    </Border>
</UserControl>
